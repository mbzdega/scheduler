<%= simple_form_for(:session, :url => sessions_path, :html => { :class => 'form-horizontal' }) do |f| %>
	
	<%= f.error_notification %>
  <%= f.input :email %>
  <%= f.input :password %>

  	<div class="form-actions">
		<%= f.error :base %>
    <%= f.button :submit, :value => "Log In", :class => 'btn btn-primary' %>
  	</div>

<% end %>
