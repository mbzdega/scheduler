<%- model_class = League.new.class -%>
<h1>A List of all Leagues</h1></br>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:manager) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @leagues.each do |league| %>
      <tr>
        <td><%= link_to league.id, league_path(league) %></td>
        <td><%= link_to league.name, league_path(league) %></td>
        <td><%= league.manager %></td>
        <td>
	        <%= link_to t('.show', :default => t("helpers.links.show")),
                      league_path(league), :class => 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>