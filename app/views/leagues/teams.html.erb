<%= render 'partials/secondary_nav' %>

<h1>Teams in the <%= @current_season.name %> season</h1>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>id</th>
      <th>Name</th>
			<th>Gender</th>
      <th>Home Field</th>
      <th>League Rank</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.id %></td>
        <td><%= link_to team.name, team_path(team) %></td>
				<td><%= team.gender %></td>
        <td><%= team.home_field %></td>
        <td><%= team.rank %></td>
        <td>
	        <%= link_to t('.show', :default => t("helpers.links.show")),
                      team_path(team), :class => 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>