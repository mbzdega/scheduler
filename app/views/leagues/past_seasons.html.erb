<%= render 'partials/secondary_nav' %>

<h3>Click on past season for more information</h3>
<table class=" table table-striped table-condensed">
  <thead>
    <tr>
      <th>id</th>
      <th>Name</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @past_seasons.each do |season| %>
      <tr>
        <td><%= season.id %></td>
        <td><%= link_to season.name, season_path(season) %></td>
        <td>
	        <%= link_to t('.show', :default => t("helpers.links.show")),
                      season_path(season), :class => 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>