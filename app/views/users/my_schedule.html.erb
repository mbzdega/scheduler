<h1>My Schedule</h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
			<th>Match Status</th>
      <th>Team 1</th>
      <th>Score</th>
      <th>Team 2</th>
      <th>Score</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= link_to match.id, match_path(match) %></td>
				<td><% if match.played %>
								<%= 'played' %>
							<% else %>
								<%= 'to be played' %>
							<% end %>
				</td>
        <td><%= link_to match.teams[0].name, team_path(match.teams[0].id) %></td>
        <td><%= match.score1%></td>
				<td><%= link_to match.teams[1].name, team_path(match.teams[1].id) %></td>
				<td><%= match.score2%></td>
        <td>
	        <%= link_to t('.show', :default => t("helpers.links.show")),
                      match_path(match), :class => 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>